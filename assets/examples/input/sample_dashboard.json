{
  "dashboard": {
    "id": null,
    "uid": "kubernetes-cluster",
    "title": "Kubernetes Cluster Overview",
    "tags": ["kubernetes", "cluster", "monitoring"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "5s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus",
          "refresh": 1
        },
        {
          "name": "cluster",
          "type": "query",
          "datasource": "${datasource}",
          "query": "label_values(kube_pod_info, cluster)",
          "refresh": 2
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "builtIn": 1,
          "datasource": "${datasource}",
          "enable": true,
          "hide": true,
          "iconColor": "rgba(0, 211, 255, 0.945)",
          "name": "Annotations & Alerts",
          "type": "dashboard"
        }
      ]
    },
    "editable": true,
    "fiscalYearStartMonth": 0,
    "graphTooltip": 0,
    "id": null,
    "links": [],
    "liveNow": false,
    "panels": [
      {
        "collapsed": false,
        "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
        "id": 1,
        "panels": [],
        "title": "Cluster Health",
        "type": "row"
      },
      {
        "datasource": {
          "type": "prometheus",
          "uid": "${datasource}"
        },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 70 },
                { "color": "red", "value": 90 }
              ]
            },
            "unit": "percent"
          },
          "overrides": []
        },
        "gridPos": { "h": 8, "w": 8, "x": 0, "y": 1 },
        "id": 2,
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "auto"
        },
        "pluginVersion": "10.0.0",
        "targets": [
          {
            "expr": "(sum(kube_node_status_condition{condition=\"Ready\",status=\"true\"}) / sum(kube_node_info)) * 100",
            "legendFormat": "Cluster CPU",
            "refId": "A"
          }
        ],
        "title": "Cluster CPU Usage",
        "type": "stat",
        "transparent": false
      },
      {
        "datasource": {
          "type": "prometheus",
          "uid": "${datasource}"
        },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 70 },
                { "color": "red", "value": 90 }
              ]
            },
            "unit": "percent"
          },
          "overrides": []
        },
        "gridPos": { "h": 8, "w": 8, "x": 8, "y": 1 },
        "id": 3,
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "auto"
        },
        "pluginVersion": "10.0.0",
        "targets": [
          {
            "expr": "(sum(kube_node_status_allocatable{resource=\"memory\"}) - sum(kube_node_status_allocatable{resource=\"memory\",node!~\"master.*\"})) / sum(kube_node_status_allocatable{resource=\"memory\"}) * 100",
            "legendFormat": "Cluster Memory",
            "refId": "A"
          }
        ],
        "title": "Cluster Memory Usage",
        "type": "stat",
        "transparent": false
      },
      {
        "datasource": {
          "type": "prometheus",
          "uid": "${datasource}"
        },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "custom": {
              "axisCenteredZero": false,
              "axisColorMode": "text",
              "axisLabel": "",
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 20,
              "gradientMode": "none",
              "hideFrom": { "legend": false, "tooltip": false, "viz": false },
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "pointSize": 5,
              "scaleDistribution": { "type": "linear" },
              "showPoints": "never",
              "spanNulls": false,
              "stacking": { "group": "A", "mode": "none" },
              "thresholdsStyle": { "mode": "off" }
